{
  "name": "custom-pc-builder",
  "version": "1.0.0",
  "description": "A comprehensive e-commerce platform for building custom PCs with advanced payment integration",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev\"",
    "build": "npm install && cd backend && npm install",
    "start": "node index.js",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "deploy": "cd frontend && npm run build"
  },
  "keywords": [
    "pc-builder",
    "ecommerce",
    "react",
    "nodejs",
    "mongodb",
    "payment-gateway",
    "custom-pc"
  ],
  "author": "Custom PC Builder Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.0",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.12",
    "qrcode": "^1.5.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/custom-pc-builder.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/custom-pc-builder/issues"
  },
  "homepage": "https://github.com/yourusername/custom-pc-builder#readme"
}